<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp">

    <TextView
        android:id="@+id/tvTestDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="12dp"
        android:layout_alignParentBottom="false"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_toRightOf="@+id/tvDayNumTest"
        android:text="TUE"
        android:layout_centerVertical="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDayNumTest"
        android:textStyle="bold"
        android:textSize="32dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/tvTestDay"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:layout_marginRight="10dp"
        android:singleLine="false"
        android:text="15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTestHour"
        android:layout_toEndOf="@+id/tvDayNumTest"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignBottom="@+id/tvQualification"
        android:layout_toRightOf="@+id/tvDayNumTest"
        android:layout_marginBottom="5dp"
        android:text="1:00 pm" />

    <View android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/circle"
        android:id="@+id/vCircle"
        android:layout_toEndOf="@+id/tvTestHour"
        android:layout_below="@+id/tvTestDay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTestName"
        android:layout_toEndOf="@+id/vCircle"
        android:layout_marginLeft="10dp"
        android:textStyle="bold|italic"
        android:text="Prueba" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvQualification"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginRight="18dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPercent"
        android:layout_toStartOf="@+id/vCircle"
        android:singleLine="false"
        android:layout_below="@+id/tvTestName"
        android:layout_alignLeft="@+id/tvTestName"
        android:layout_alignStart="@+id/tvTestName"
        android:text="10" />

</RelativeLayout>